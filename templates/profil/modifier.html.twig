{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Modifier profil{% endblock %}

{% block body %}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('accueil')}}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('user_profil',{id:user.id})}}">Détail Profil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Modifier Profil</li>
        </ol>
    </nav>

    <h1>Modifies ton profil, {{ app.user.pseudo }}</h1>
    <div class="container">
        <div class="row">

            <div class="col-sm">
                {% if not user.photo %}
                    <img style="width:200px;" src="{{ asset('img/defaut.png') }}"  alt="photo de profil">
                {% else %}
                <img  style="width:200px;" src="{{ asset('uploads/photos/' ~ user.photo) }}"  alt="photo de profil">
                {% endif %}
            </div>

            <div class="col-sm">
                {{ form_start (formUser) }}
                <div class="form-group ">
                    {{ form_row(formUser.pseudo) }}
                </div>
                <div class="form-group ">
                    {{ form_row(formUser.email) }}

                </div>
                <div class="form-group ">
                    {{ form_row(formUser.telephone) }}
                </div>
                <div class="form-group ">
                    {{ form_row(formUser.photo) }}
                </div>
                <div class="form-group ">
                    {{ form_row(formUser.plainPassword) }}
                </div>
            </div>
            <div class="col-sm">
                    <div class="form-group ">
                        {{ form_row(formUser.prenom) }}
                    </div>
                    <div class="form-group ">
                        {{ form_row(formUser.nom) }}

                    </div>
                    <div class="form-group ">
                        {{ form_row(formUser.new_password) }}
                    </div>

                    <div class="form-group ">
                        <button type="submit" class="btn btn-success">Enregistrer</button>
                        <a href="{{ path('user_profil',{id:user.id}) }}" class="btn btn-secondary">Retour</a>
                    </div>
                {{ form_end (formUser) }}
            </div>
        </div>
    </div>
</div>
<script>
    //récupération des élèments du DOM
    let btn = document.querySelector('button');
    let img = element.getAttribute("src");
    btn.addEventListener('click'()=>{
        //requête ajax pour récupérer l'image chargée
        element.setAttribute("src,")
    });
</script>
{% endblock %}
