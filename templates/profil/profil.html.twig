{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Profil{% endblock %}

{% block body %}


<div class="container py-5">
    <h1>{{ user.pseudo }}</h1>
</div>
<div>
    <div>Prénom : {{ user.prenom }}</div>
    <div>Nom : {{ user.nom }}</div>
    <div>Téléphone : {{ user.telephone }}</div>
    <div>Campus : {{ user.campus.nom }}</div>
</div>
<div class="py-5">
    <a href="{{ path('user_modifier', { id : user.id }) }}" class="btn btn-outline-primary">Modifier</a>
    <a href="accueil" class="btn btn-outline-primary">Accueil</a>
</div>
{% endblock %}
