{% extends 'base.html.twig' %}

{% block title %}Ajouter une sortie{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container col-4">
    <h1>Afficher une sortie</h1>
    <table>
        <tbody>
        {% for s in sortie %}
        <tr>
            <td> {{ s.nom }}</td>
            <td> {{ s.dateHeureDebut|date('d/m/Y') }}</td>
            <td> {{ s.duree }}</td>
            <td> {{ s.dateLimiteInscription|date('d/m/Y') }}</td>
            <td> {{ s.nbInscriptionsMax }}</td>
            <td> {{ s.infosSortie }}</td>
            <td> {{ s.lieu }}</td>
            <td> {{ s.etat }}</td>
            <td> {{ s.campus }}</td>
            <td> {{ s.users }}</td>
            <td> {{ s.organisateur }}</td>
        </tr>
        </tbody>
        {% endfor %}





    </table>
    <button type="button"  class="btn btn-sucess" href="accueil.html.twig">
        retour
    </button>



</div>
{% endblock %}
