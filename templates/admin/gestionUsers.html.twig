{% extends 'base.html.twig' %}

{% block title %}{{parent()}} | GestionUsers{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs inscrits</h1>
    <table class="table table-striped">
        <thead>
        <tr>

            <th scope="col">Pseudo</th>
            <th scope="col">Email</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Campus</th>
            <th scope="col">Gestion</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.pseudo }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.nom }}</td>
            <td>{{ user.prenom }}</td>
            <td>{{ user.campus.nom }}</td>
            <td><a href="#" class="btn btn-sm btn-primary">Modifier Rôle</a> <a href="#" class="btn btn-sm btn-dark">Rendre Inactif</a> <a href="#" class="btn btn-sm btn-danger">Supprimer</a> </td>
        </tr>
        </tbody>
        {% endfor %}
    </table>
    <a href="{{ path('app_register') }}" class="btn btn-outline-primary">Ajouter un User</a>
    <a href="#" class="btn btn-outline-primary">Ajouter des Users</a>
    <a href="{{ path('admin_accueil') }}" class="btn btn-secondary">Retour</a>

{% endblock %}



